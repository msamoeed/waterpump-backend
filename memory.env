# Memory Optimization Environment Variables
# Copy this to .env and adjust values as needed

# Node.js Memory Settings
NODE_OPTIONS=--max-old-space-size=4096
NODE_ENV=production

# Docker Memory Limits (in bytes)
DOCKER_MEMORY_LIMIT=2147483648
DOCKER_MEMORY_RESERVATION=1073741824

# Application Memory Settings
MAX_HEAP_SIZE=4096
GC_INTERVAL=30000

# Logging Memory Management
LOG_LEVEL=warn
LOG_BUFFER_SIZE=1000
LOG_FLUSH_INTERVAL=5000
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Database Connection Pooling
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5
POSTGRES_ACQUIRE_TIMEOUT=30000
POSTGRES_CREATE_TIMEOUT=30000
POSTGRES_DESTROY_TIMEOUT=5000
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_REAP_INTERVAL=1000
POSTGRES_CREATE_RETRY_INTERVAL=200
POSTGRES_CONNECT_TIMEOUT=30000
POSTGRES_STATEMENT_TIMEOUT=30000
POSTGRES_QUERY_TIMEOUT=30000

# InfluxDB Connection Pooling
INFLUXDB_MAX_CONNECTIONS=10
INFLUXDB_QUERY_TIMEOUT=30000

# Database Connection Pool Settings
REDIS_MAX_CONNECTIONS=10
REDIS_IDLE_TIMEOUT=30000

# InfluxDB Settings
INFLUXDB_BATCH_SIZE=1000
INFLUXDB_FLUSH_INTERVAL=10000

# WebSocket Settings
WS_MAX_PAYLOAD=1048576
WS_MAX_CONNECTIONS=1000
